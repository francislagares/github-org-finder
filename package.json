{
  "name": "mern-monorepo",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "repository": "git@github.com:francislagares/mern-monorepo.git",
  "author": "Francis Lagares <francis.lagares@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "api": "pnpm --filter=@mern-monorepo/api start:dev",
    "client": "pnpm --filter=@mern-monorepo/client dev",
    "start": "concurrently --kill-others-on-fail \"pnpm api\"  \"pnpm client\"",
    "build": "pnpm build:clean && pnpm build:tsc",
    "build:tsc": "tsc && tsc-alias",
    "build:clean": "rimraf dist; exit 0",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "test:api": "pnpm --filter=@mern-monorepo/api test",
    "test:client": "pnpm --filter=@mern-monorepo/client test",
    "e2e:client": "pnpm --filter=@mern-monorepo/client cypress:run",
    "build:api": "pnpm --filter=@mern-monorepo/api build",
    "build:client": "pnpm --filter=@mern-monorepo/client build",
    "deploy": "concurrently --kill-others-on-fail \"pnpm build-client\"  \"pnpm build-api\"",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev && pm2 logs all",
    "deploy:prod": "pnpm build && pm2 start ecosystem.config.js --only prod",
    "deploy:clean": "pm2 stop all && pm2 delete all",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.7.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^2.0.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.7.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "pm2": "^5.4.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.6",
    "tsx": "^4.16.2",
    "typescript": "^5.1.3",
    "typescript-eslint": "^7.16.0",
    "typescript-transform-paths": "^3.4.7",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^2.0.2",
    "vitest-mock-extended": "^1.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "concurrently": "^8.1.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.5.0"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
